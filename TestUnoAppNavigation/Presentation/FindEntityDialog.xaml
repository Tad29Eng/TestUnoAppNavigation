<ContentDialog x:Class="TestUnoAppNavigation.Presentation.FindEntityDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:local="using:TestUnoAppNavigation.Presentation"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               x:Uid="FindEntityDialog"
               Title="{Binding Title}"
               Style="{ThemeResource DefaultContentDialogStyle}"
               PrimaryButtonText="Fnd"
               CloseButtonText="Cls"
               PrimaryButtonClick="PrimaryButton_Click"
               CloseButtonClick="CloseButton_Click">
    <Grid RowDefinitions="*,Auto,Auto,*"
          ColumnDefinitions="*, Auto, *">

        <StackPanel Margin="0,0,0,10"
                    Orientation="Horizontal"
                    Grid.Column="1"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock x:Uid="TblcEntityCode"
                       Text="{Binding TblcEntityCodeText}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

            <TextBox MinWidth="150"
                     Margin="5,0,0,0"
                     Text="{Binding Entity.Code, Mode=TwoWay}" />

        </StackPanel>

    </Grid>
</ContentDialog>
