<Page x:Class="TestUnoAppNavigation.Presentation.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:TestUnoAppNavigation.Presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:mvux="using:Uno.Extensions.Reactive.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      mc:Ignorable="d"
      Background="LightGray">

    <Border CornerRadius="5"
            BorderBrush="Black"
            BorderThickness="1"
            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
            Margin="10"
            MaxWidth="1024">

        <Grid RowDefinitions="Auto,Auto,Auto,*"
              Margin="5">

            <!--<utu:NavigationBar Grid.Row="0"
                               Content="Order">
                <AppBarButton Icon="Save"
                              Label="Save" />
                <AppBarButton Icon="Refresh"
                              Label="Refresh"
                              Command="{Binding RefreshCmdAsync}"/>
            </utu:NavigationBar>-->

            <CommandBar FlowDirection="RightToLeft"
                        DefaultLabelPosition="Collapsed"
                        IsOpen="False"
                        Grid.Row="1">
                <AppBarButton Icon="Refresh"
                              Label="Refresh"
                              Command="{Binding RefreshCmdAsync}" />
                <AppBarButton Icon="Save"
                              Label="Save"
                              Command="{Binding SaveCmdAsync}" />
                <AppBarButton Icon="Back"
                              Label="Back"
                              Command="{Binding CloseCmdAsync}" />
            </CommandBar>

            <TextBox Grid.Row="2"
                     Visibility="{Binding IsCodeForFindVisible}"
                     Text="{Binding CodeForFind, Mode=TwoWay}" />

            <mvux:FeedView Grid.Row="3"
                           Source="{Binding Order}">

                <DataTemplate>
                    <StackPanel Orientation="Vertical">

                        <TextBox DataContext="{Binding Data}"
                                 IsReadOnly="True"
                                 Text="{Binding Code, Mode=OneWay}" />
                        <TextBox DataContext="{Binding Data}"
                                 Text="{Binding Name, Mode=TwoWay}" />

                        <StackPanel Orientation="Horizontal">

                            <!--<Button Command="{Binding Refresh}"
                                    HorizontalAlignment="Stretch"
                                    x:Uid="BtnRefresh" />-->

                            <Button Command="{utu:AncestorBinding AncestorType=Page, Path=DataContext.RefreshCmdAsync}"
                                    HorizontalAlignment="Stretch"
                                    x:Uid="BtnRefresh" />
                            <Button Command="{utu:AncestorBinding AncestorType=Page, Path=DataContext.SaveCmdAsync}"
                                    HorizontalAlignment="Stretch"
                                    x:Uid="BtnSave" />
                            <Button HorizontalAlignment="Stretch"
                                    x:Uid="BtnClose"
                                    Command="{utu:AncestorBinding AncestorType=Page, Path=DataContext.CloseCmdAsync}" />

                        </StackPanel>

                    </StackPanel>
                </DataTemplate>

                <mvux:FeedView.NoneTemplate>
                    <DataTemplate>
                        <TextBlock Text="No order were found based on your search criteria" />
                    </DataTemplate>
                </mvux:FeedView.NoneTemplate>

            </mvux:FeedView>

        </Grid>

    </Border>
</Page>
