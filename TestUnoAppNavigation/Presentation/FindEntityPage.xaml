<Page x:Class="TestUnoAppNavigation.Presentation.FindEntityPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:TestUnoAppNavigation.Presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      Background="LightGray">

    <Grid RowDefinitions="*,Auto,Auto,*"
          ColumnDefinitions="*, Auto, *">

        <utu:NavigationBar Grid.ColumnSpan="3"
                           Grid.Row="0"
                           Content="{Binding NavigationBarContent}"><AppBarElementContainer /></utu:NavigationBar>

        <StackPanel Margin="0,0,0,10"
                    Orientation="Horizontal"
                    Grid.Column="1"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock x:Uid="TblcEntityCode"
                       Text="{Binding TblcEntityCodeText}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

            <TextBox MinWidth="150"
                     Margin="5,0,0,0"
                     Text="{Binding Entity.Code, Mode=TwoWay}" />

        </StackPanel>

        <Grid Grid.Column="1"
              Grid.Row="2"
              ColumnDefinitions="*,*">

            <Button Grid.Column="0"
                    Command="{Binding FindCmdAsync}"
                    HorizontalAlignment="Stretch"
                    x:Uid="BtnFind" />

            <Button Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    x:Uid="BtnCancel"
                    Command="{Binding CloseCmdAsync}" />
        </Grid>
       
    </Grid>
</Page>
